{
  "id": "voice_settings",
  "type": "panel",
  "position": { "anchor": "center", "offsetX": 0, "offsetY": 0 },
  "size": { "width": 400, "height": 500 },
  "visible": false,
  "closeable": true,
  "style": {
    "backgroundColor": "rgba(20, 20, 25, 0.98)",
    "borderRadius": "16px",
    "border": "2px solid rgba(138, 43, 226, 0.3)",
    "boxShadow": "0 0 30px rgba(0, 0, 0, 0.5)",
    "backdropFilter": "blur(10px)"
  },
  "elements": [
    {
      "id": "header",
      "type": "panel",
      "size": { "height": 60 },
      "style": {
        "backgroundColor": "rgba(138, 43, 226, 0.1)",
        "borderRadius": "16px 16px 0 0"
      },
      "children": [
        {
          "id": "title",
          "type": "text",
          "text": "KRACKEDVOICE SETTINGS",
          "position": { "x": 0, "y": 20 },
          "style": {
            "color": "#e0e0e0",
            "fontSize": "20px",
            "fontWeight": "800",
            "letterSpacing": "2px",
            "textAlign": "center"
          }
        }
      ]
    },
    {
      "id": "content",
      "type": "scroll_view",
      "position": { "y": 70 },
      "size": { "width": "100%", "height": 410 },
      "children": [
        {
          "id": "general_section",
          "type": "text",
          "text": "GENERAL",
          "position": { "x": 30, "y": 10 },
          "style": { "color": "#8a2be2", "fontSize": "12px", "fontWeight": "bold" }
        },
        {
          "id": "mute_toggle",
          "type": "toggle",
          "label": "Mute Microphone",
          "position": { "x": 30, "y": 35 },
          "size": { "width": 340, "height": 40 },
          "binding": "voice.muted"
        },
        {
          "id": "deafen_toggle",
          "type": "toggle",
          "label": "Deafen",
          "position": { "x": 30, "y": 80 },
          "size": { "width": 340, "height": 40 },
          "binding": "voice.deafened"
        },
        {
          "id": "audio_section",
          "type": "text",
          "text": "AUDIO LEVELS",
          "position": { "x": 30, "y": 140 },
          "style": { "color": "#8a2be2", "fontSize": "12px", "fontWeight": "bold" }
        },
        {
          "id": "output_label",
          "type": "text",
          "text": "Voice Volume",
          "position": { "x": 30, "y": 165 },
          "style": { "color": "#cccccc", "fontSize": "14px" }
        },
        {
          "id": "output_slider",
          "type": "slider",
          "position": { "x": 30, "y": 185 },
          "size": { "width": 340, "height": 24 },
          "binding": "voice.outputVolume"
        },
        {
          "id": "info_footer",
          "type": "text",
          "text": "KrackedVoice by MoonWiRaja KRACKEDDEVS",
          "position": { "x": 0, "y": 380 },
          "style": { "color": "rgba(255, 255, 255, 0.2)", "fontSize": "10px", "textAlign": "center" }
        }
      ]
    }
  ]
}
